// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingredient {
  id       String @id @default(uuid())
  name     String
  quantity Int

  snackIngredients SnackIngredients[]

  @@map("ingredients")
}

model Snack {
  id          String @id @default(uuid())
  name        String
  description String
  price       Int

  snackIngredients SnackIngredients[]
  snackOrders      OrderSnacks[]

  @@map("snacks")
}

model SnackIngredients {
  id           String @id @default(uuid())
  snackId      String @map("snack_id")
  ingredientId String @map("ingredients_id")
  quantity     Int

  snack      Snack      @relation(fields: [snackId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  @@map("snack_ingredients")
}

model Order {
  id   String   @id @default(uuid())
  date DateTime @default(now())

  snackOrders OrderSnacks[]

  @@map("orders")
}

model OrderSnacks {
  id       String @id @default(uuid())
  orderId  String @map("order_id")
  snackId  String @map("snack_id")
  quantity Int

  order Order @relation(fields: [orderId], references: [id])
  snack Snack @relation(fields: [snackId], references: [id])

  @@map("order_snacks")
}
